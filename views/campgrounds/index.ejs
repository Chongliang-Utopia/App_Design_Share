<%- include("../partials/header") %>


<div class="container">
	<header class="jumbotron" style="background-image: url(https://media.istockphoto.com/photos/abstract-white-background-picture-id995719692?k=6&m=995719692&s=612x612&w=0&h=twmGvY6u8zvagees5Hp5KQBSYkSduJbMF4pXqmAWEjE=); background-size: 100%;">
		<div class="container">
			<h1>Welcome to Palette-Share!</h1>
			<p>
				A community for designers to share their creative ideas. Come and join us!
			</p>
			<p style="margin: 30px 0px 0px 0px">
				<a class="btn btn-info btn-lg" href="/campgrounds/new">Post your design</a>
			</p>
			<p>
				<form action="/campgrounds" method="GET" class="form-inline">
					<div class="form-group">
						<input type="text" name="search" placeholder="Search..." class="form-control">
						<input type="submit" value="Search"  class="btn btn-default">
					</div>
				</form>
				<!-- Test -->
				<!-- <form action="/campgrounds" method="GET" class="form-inline">
					<div class="form-group">
						<input type="submit" name="recommend"value="Recommend"  class="btn btn-default">
					</div>
				</form> -->
			</p>
		</div>
	</header>
	

	<div class="row text-center" style="display:flex; flex-wrap: wrap">
		<div class="col-md-12">
			<% if(noMatch != undefined) { %>
				<h3>
					<%= noMatch %>
				</h3>
			<% } %>
		</div>
		<% campgrounds.forEach(function(campground){ %>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img src="<%= campground.image %>">
					<div class="caption">
						<h4>
							<%= campground.name %>
						</h4>
						<% if (campground.rating === 0) { %>
						<em>No reviews yet.</em>
						<% } else { %>
						<span class="fa fa-star checked"></span>
						<span class="fa fa-star <% if (campground.rating > 1.5) { %> checked <% } %>"></span>
						<span class="fa fa-star <% if (campground.rating > 2.5) { %> checked <% } %>"></span>
						<span class="fa fa-star <% if (campground.rating > 3.5) { %> checked <% } %>"></span>
						<span class="fa fa-star <% if (campground.rating > 4.5) { %> checked <% } %>"></span>
						<% } %>
					</div>
					<p>
						<a href="/campgrounds/<%= campground._id %>" class="btn btn-info">More...</a>
					</p>
				</div>
			</div>
		<% }); %>
	</div>	
</div>

<%- include("../partials/footer") %>