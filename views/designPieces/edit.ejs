<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= designPiece.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/designPieces/<%= designPiece._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="designPiece[name]" value="<%= designPiece.name %>">
                </div>
				<div class="form-group">
					<input class="form-control" type="number" name="designPiece[price]" value="<%= designPiece.price %>" min="0.01" step="0.01" required>
				</div>
                <div class="form-group">
                    <input class="form-control" type="text" name="designPiece[image]" value="<%= designPiece.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="designPiece[description]" value="<%= designPiece.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/designPieces">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>