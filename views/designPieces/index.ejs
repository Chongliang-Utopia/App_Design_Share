<%- include("../partials/header") %>

<div class="container">
	<header class="jumbotron" style="background-image: url(https://media.istockphoto.com/photos/abstract-white-background-picture-id995719692?k=6&m=995719692&s=612x612&w=0&h=twmGvY6u8zvagees5Hp5KQBSYkSduJbMF4pXqmAWEjE=); background-size: 100%;">
		<div class="container">
			<h1>Welcome to Palette-Share!</h1>
			<p>
				A community for designers to share their creative ideas. Come and join us!
			</p>
			<p style="margin: 30px 0px 0px 0px">
				<a class="btn btn-info btn-lg" href="/designPieces/new">Post your design</a>
			</p>
			<p>
				<form action="/designPieces" method="GET" class="form-inline">
					<div class="form-group">
						<input type="text" name="search" placeholder="Search..." class="form-control">
						<input type="submit" value="Search"  class="btn btn-default">
					</div>
				</form>
			</p>
		</div>
	</header>
	
	<!-- Filter button -->
	<div id="filter-button"  class="btn-group">
	  <button type="button" class="btn btn-default">Filter</button>
	  <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
		<span class="caret"></span>
		<span class="sr-only">Toggle Dropdown</span>
	  </button>
	  <ul class="dropdown-menu">
		<li><a href="/designPieces?filter=graphic">Graghic Design</a></li>
		<li><a href="/designPieces?filter=UI">UI Design</a></li>
		<li><a href="/designPieces">Show All</a></li>
		<li role="separator" class="divider"></li>
		<li><a href="/designPieces?sort=rating">Rating high to low</a></li>
	  </ul>
	</div>
	<div id="showpage" class="row text-center">
		<div class="col-md-12">
			<% if(noMatch != undefined) { %>
				<h3>
					<%= noMatch %>
				</h3>
			<% } %>
		</div>
		<% designPieces.forEach(function(designPiece){ %>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img src="<%= designPiece.image %>">
					<div class="caption">
						<h4>
							<%= designPiece.name %>
						</h4>
						<% if (designPiece.rating === 0) { %>
						<em>No reviews yet.</em>
						<% } else { %>
						<span class="fa fa-star checked"></span>
						<span class="fa fa-star <% if (designPiece.rating > 1.5) { %> checked <% } %>"></span>
						<span class="fa fa-star <% if (designPiece.rating > 2.5) { %> checked <% } %>"></span>
						<span class="fa fa-star <% if (designPiece.rating > 3.5) { %> checked <% } %>"></span>
						<span class="fa fa-star <% if (designPiece.rating > 4.5) { %> checked <% } %>"></span>
						<% } %>
					</div>
					<p>
						<a href="/designPieces/<%= designPiece._id %>" class="btn btn-info">More...</a>
					</p>
				</div>
			</div>
		<% }); %>
	</div>	
</div>


<%- include("../partials/footer") %>